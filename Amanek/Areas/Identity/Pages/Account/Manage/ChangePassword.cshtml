@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<style>
    .container {
        max-width: 900px;
        background: white;
        border-radius: 12px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        padding: 30px;
        margin: auto;
        display: flex; /* Align elements side by side */
        justify-content: space-between;
        align-items: center;
    }

    .form-container {
        width: 50%;
        display: flex;
        flex-direction: column;
    }

    .form-floating input {
        width: 100%;
        margin-bottom: 15px;
    }

    .submit {
        width: 100%;
        padding: 10px;
        background-color: black;
        color: white;
        border: none;
        border-radius: 25px;
        font-size: 16px;
        cursor: pointer;
        transition: background 0.3s ease;
    }

        .submit:hover {
            background-color: #333;
            transform: scale(1.05);
        }

    .image-container {
        width: 45%;
        text-align: center;
    }

        .image-container img {
            max-width: 100%;
            height: auto;
        }

</style>

<div class="container">
    <div class="form-container">
        <h2 class="text-center">Reset Your Password</h2>
        <partial name="_StatusMessage" for="StatusMessage" />

        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <h6>Old Password</h6>
                <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" placeholder="Enter old password." />
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <h6>New Password</h6>
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" placeholder="Enter new password." />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <h6>Confirm Password</h6>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Confirm new password." />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="submit">Update Password</button>
        </form>
    </div>

    <div class="image-container">
        <img src="/images/Reset password-pana.png" alt="Reset Password Image">
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
