@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Poppins', sans-serif;
        background: #F5F7FA;
    }

    .forgot-password-container {
        width: 100vw; /* Full width */
        height: 100vh; /* Full height */
        display: flex;
        align-items: center;
        justify-content: center;
        background: white;
    }

    .forgot-password-wrapper {
        width: 100%;
        max-width: 1400px;
        height: 70vh;
        display: flex;
        box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.15);
        border-radius: 12px;
        overflow: hidden;
    }

    /* Form Section */
    .forgot-password-content {
        width: 40%;
        background: white;
        padding: 50px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .forgot-password-content h2 {
            font-size: 28px;
            margin-bottom: 20px;
        }

        .forgot-password-content .form-floating {
            margin-bottom: 20px;
        }

        /* Button Styling */
        .forgot-password-content .submit {
            width: 100%;
            padding: 12px;
            background-color: #000; /* Black button */
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            cursor: pointer;
            transition: background 0.3s ease;
        }

            .forgot-password-content .submit:hover {
                background-color: #333; /* Darker black hover */
            }

    /* Image Section */
    .forgot-password-img {
        width: 60%;
        background: #F5F5F5;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

        .forgot-password-img img {
            width: 90%;
            height: auto;
            max-width: 600px;
        }
</style>

<div class="forgot-password-container">
    <div class="forgot-password-wrapper">
        <div class="forgot-password-content">
            <h2>Forgot Your Password?</h2>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <button type="submit" class="submit">Reset Password</button>

                <p class="mt-3">Back to <a asp-area="Identity" asp-page="/Account/Login">Login</a></p>
            </form>
        </div>

        <div class="forgot-password-img">
            <img src="~/images/Forgot password-cuate.png" alt="Forgot Password">
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
