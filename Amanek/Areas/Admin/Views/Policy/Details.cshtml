@model Models.InsurancePolicy
@{
    ViewData["Title"] = "Policy Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container mt-4">
    <h2 class="mb-4">Policy Details</h2>

    <!-- Policy Details -->
    <div class="row">
        <!-- Left Column: Basic Info -->
        <div class="col-md-6">
            <div class="mb-3">
                <strong>User:</strong>
                <p>@Model.User?.FullName</p>
            </div>
            <div class="mb-3">
                <strong>Company:</strong>
                <p>@Model.Company?.Name</p>
            </div>
            <div class="mb-3">
                <strong>Policy Status:</strong>
                <p>@Model.PolicyStatus</p>
            </div>
            <div class="mb-3">
                <strong>License Number:</strong>
                <p>@Model.LicenseNumber</p>
            </div>
            <div class="mb-3">
                <strong>Medical Condition:</strong>
                <p>@Model.MedicalCondition</p>
            </div>
            <div class="mb-3">
                <strong>Smoking Status:</strong>
                <p>@Model.SmokingStatus</p>
            </div>
        </div>

        <!-- Right Column: Additional Info -->
        <div class="col-md-6">
            <div class="mb-3">
                <strong>Travel Status:</strong>
                <p>@Model.TravelStatus</p>
            </div>
            <div class="mb-3">
                <strong>Start Date:</strong>
                <p>@Model.LicenseIssuanceDate.ToShortDateString()</p>
            </div>
            <div class="mb-3">
                <strong>End Date:</strong>
                <p>@Model.LicenseEndDate.ToShortDateString()</p>
            </div>
          @*   <div class="mb-3">
                <strong>Claims:</strong>
                <ul>
                    @foreach (var claim in Model.Claims)
                    {
                        <li>@claim.Description - @claim.ClaimDate.ToShortDateString()</li>
                    }
                </ul>
            </div> *@
        </div>
    </div>

    <!-- Back Button -->
    <a href="@Url.Action("Index", "InsurancePolicies")" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i> Back to List
    </a>
</div>
